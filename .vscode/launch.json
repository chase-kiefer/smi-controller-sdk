  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run functional tests",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env":{
        "KUBECONFIG": "${env:HOME}/.shipyard/config/dc1/kubeconfig.yaml"
      }
    },
    {
      "name": "Debug functional tests",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/test/main.go",
      "env":{
        "KUBECONFIG": "${env:HOME}/.shipyard/config/dc1/kubeconfig.yaml"
      }
    }
  ]
}